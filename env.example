PORT=5050

# Google OAuth App
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Where this microservice is reachable (used for redirect_uri generation)
BASE_URL=http://localhost:5050

# JWT signing secret for this microservice (generate a long random string)
JWT_SECRET=

# Optional: restrict allowed return origins (comma-separated). Used to validate returnTo URLs.
ALLOWED_RETURN_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional: allow HTTPS single-level subdomains for returnTo (comma-separated).
# Example: dima-ai.com allows https://dev-xyz.dima-ai.com (but not https://foo.bar.dima-ai.com).
ALLOWED_RETURN_HOST_SUFFIXES=

# Optional: database file path (defaults to ./auth.db)
DATABASE_PATH=./auth.db

# Logging
# LOG_LEVEL controls the minimum level emitted to stdout (debug|info|warn|error). Default: info
LOG_LEVEL=info
# Optional: log a request_started event (in addition to request_completed). Default: false
LOG_REQUEST_START=false

